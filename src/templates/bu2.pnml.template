item (FEAT_STATIONS, stn_%name) {
    property {
        class:          "CNS1";
        classname:      string(STR_CLS_CNP);
        name:           string(STR_NAME_$name);
    }
    graphics {
        sprite_layouts: [spritelayout_%name_x_0, spritelayout_%name_y_0];
        spriteset_%name_x_0;
    }
}

